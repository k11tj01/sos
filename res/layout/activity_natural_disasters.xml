<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NaturalDisasters" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:onClick="tornadolistener"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:text="Tornados" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="hurricanelistener"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/button6"
        android:text="Hurricanes" />

    <Button
        android:id="@+id/button4"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:onClick="floodslistener"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button5"
        android:text="Floods" />

    <Button
        android:id="@+id/button6"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:onClick="tsunamilistener"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button1"
        android:text="Tsunami" />

    <Button
        android:id="@+id/button2"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:onClick="earthqlistener"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Earth Quakes" />

    <Button
        android:id="@+id/button5"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:onClick="wildflistener"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignTop="@+id/button2"
        android:text="Wild Fires" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button5"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/button3" >
    </ListView>

</RelativeLayout>
