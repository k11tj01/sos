<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sos"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen" >


    <Button
        android:id="@+id/medical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FBFFF5"
        android:text="Medical" />

    <Button
        android:id="@+id/emergencyContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/sendAlert"
        android:background="#CC1271"
        android:text="Emergency Contacts" />

    <Button
        android:id="@+id/sendAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:background="#FC9608"
        android:layout_toLeftOf="@+id/Fire"
        android:text="Send Alert" />

    <Button
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Fire"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sendAlert"
        android:text=" Health Insurance Info" 
        android:background="#FBFFF5"/>

    <Button
        android:id="@+id/Natural_Disasters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/medical"
        android:layout_alignBottom="@+id/medical"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/medical"
        android:background="#476A77"
        android:text="Natural Disasters" />

    <Button
        android:id="@+id/Fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Natural_Disasters"
        android:layout_marginRight="15dp"
        android:background="#ffff0000"
        android:text="Fire" />

</RelativeLayout>
