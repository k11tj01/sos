<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sostitle"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen" >


    <Button
        android:id="@+id/medical"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#FBFFF5"
        android:text="Medical" />

    <Button
        android:id="@+id/Fire"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/Natural_Disasters"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/Natural_Disasters"
        android:background="#ffff0000"
         android:layout_alignParentRight="true"
        android:text="Fire" />	
    

    <Button
        android:id="@+id/Natural_Disasters"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#476A77"
        android:text="Natural Disasters" />

    <Button
        android:id="@+id/emergencyContact"
        android:layout_width="97dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/sendAlert"
        android:background="#CC1271"
        android:text="Emergency Contacts" />

    <Button
        android:id="@+id/sendAlert"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:background="#FC9608"
        android:layout_toLeftOf="@+id/Fire"
        android:text="Send Alert" />

<!--      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emergencyContact"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:src="@drawable/sostitle" /> -->

    <Button
        android:id="@+id/healthInfoEnter"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_above="@+id/sendAlert"
        android:layout_alignLeft="@+id/Fire"
        android:background="#FBFFF5"
        android:text="Enter Health Insurance Info" />

    <Button
        android:id="@+id/healthInfoView"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/healthInfoEnter"
        android:layout_alignTop="@+id/sendAlert"
        android:background="#FBFFF5"
        android:text="View Health Insurance Info" />

</RelativeLayout>
